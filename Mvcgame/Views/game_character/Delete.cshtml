<div>
    <h4>игровой персонаж</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nickname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nickname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.max_HP)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.max_HP)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HP)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HP)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Armors)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Armors.ID)
        </dd>
        <dt class = "col-sm-2">
